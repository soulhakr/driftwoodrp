  body
    // BEGIN: Main wrapper
    #Main.register-page
      // BEGIN: header
      header.header
      // END: header
      // BEGIN: Main container
      section.main(role='main')
        form.register(id='registerform', action='/createAccount', method='post')
          input(type='hidden', name='_csrf', value='#{session._csrf}')    
          img(id="logo", src='/images/driftwoodlogo.png')
          .control-group
            label.control-label(for='username') Username
            .controls
              input#username.input-block-level(id='registerUsername', type='text',placeholder='',name='username')
          .control-group
            label.control-label(for='password') Password
            .controls
              input#password.input-block-level(id='registerPassword', type='password',placeholder='',name='password')
          .control-group
            label.control-label(for='confirm-password') Confirm Password
            .controls
              input#confirm-password.input-block-level(id='registerPassword2', type='password',placeholder='',name='confirmPassword')
          .control-group
            label.control-label(for='display-name') Display Name
            .controls
              input#display-name.input-block-level(id='registerDisplayName', type='text', placeholder='', name='displayName')
          .control-group
            label.control-label(for='email') E-mail
            .controls
              input#email.input-block-level(id='registerEmailAddr', type='email',placeholder='',name='email')
          .control-group
            label.control-label(for='confirm-email') Confirm E-mail
            .controls
              input#confirm-email.input-block-level(id='registerEmailAddr2', type='email',placeholder='',name='confirmEmail')
          .control-group
            .controls
              input.btn.btn-primary(type='submit', value='Register')
              a(href='/') Already registered?
          a(href='/policy/tos.txt') Terms of Service, Privacy Policy & Contact
      // END: main container
      // BEGIN: footer
      footer.footer
      // END: footer
      #scripts
        script(src='/scripts/libs/jquery/jquery.js')
        script
          $(document).ready(function() { 

            var error = function(message) {
                  if($("#error").length > 0){ 
                    $("#error").fadeOut(400, function(){
                      $(this).remove();
                      $('#logo').after("<div id='error'><p style='color:red; font-weight: bold'>" + message +  "</p></div>").fadeIn(1000);   
                    });
                  } else {
                    $('#logo').after("<div id='error'><p style='color:red; font-weight: bold'>" + message +  "</p></div>").fadeIn(1000);   
                  }
            };

            $("#registerform").on("submit", function(event) {

              var form = $('#registerform');

              if(!$("input[name=username]").val() || !$("input[name=password]").val() || !$("input[name=confirmPassword]").val() || !$("input[name=displayName]").val() || !$("input[name=email]").val() || !$("input[name=confirmEmail]").val()) {
                error("All Fields Required");
                return false;
              }

              if($("input[name=password]").val() !== $("input[name=confirmPassword]").val()) {
                error("Passwords must match");
                return false;
              }

              if($("input[name=email]").val() !== $("input[name=confirmEmail]").val()) {
                error("Emails must match");
                return false;
              }

              $.ajax({
                url: $(form).attr("action"),
                data: $(form).serialize(),
                type: 'POST',
                success: function(data) {
                  window.location = "/";
                },
                error: function( jqXHR, textStatus, errorThrown ) {
                  var response = $.parseJSON(jqXHR.responseText);  
                  error(response.err.message);
                }
              });

              return false;
            });
          });
    // END: Main wrapper

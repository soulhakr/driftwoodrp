!!! XML
!= '\n<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.0//EN" "http://www.w3.org/TR/SVG/DTD/svg10.dtd">'
svg(width='3000', height='3000', xmlns='http://www.w3.org/2000/svg', xmlns:xlink="http://www.w3.org/1999/xlink")
  defs
    pattern#grid(width='#{size}', height='#{size}', patternUnits='userSpaceOnUse')
      path.grid-path(d='M #{size} 0 L 0 0 0 #{size}', fill='none', stroke='#{color}', stroke-width='1')
  rect(width='100%', height='100%', fill='url(#grid)')